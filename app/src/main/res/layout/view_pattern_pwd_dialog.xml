<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundBg"
    android:gravity="center"
    android:orientation="vertical">

    <com.xianwen.wang.view.LockPattern
        android:id="@+id/pattern_lp_1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:arrow_color="@color/colorPrimary"
        app:inner_color="@color/colorPrimaryLight"
        app:line_color="@color/colorPrimary"
        app:outer_color="@color/colorPrimaryLight"
        app:selected_inner_color="@color/colorPrimaryDark"
        app:selected_outer_color="@color/colorPrimaryDark" />

    <com.xianwen.wang.view.LockPattern
        android:id="@+id/pattern_lp_2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"
        app:arrow_color="@color/colorPrimary"
        app:inner_color="@color/colorPrimaryLight"
        app:line_color="@color/colorPrimary"
        app:outer_color="@color/colorPrimaryLight"
        app:selected_inner_color="@color/colorPrimaryDark"
        app:selected_outer_color="@color/colorPrimaryDark" />

    <LinearLayout
        android:id="@+id/pattern_ll_1"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pattern_tv_cancel"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/textview_bg_select"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pattern_tv_next"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_bg_select"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pattern_ll_2"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/pattern_tv_up"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/textview_bg_select"
            android:gravity="center"
            android:text="上一步"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pattern_tv_ok"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/textview_bg_select"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />
</LinearLayout>
